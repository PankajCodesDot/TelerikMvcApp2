                            </div>
                            <div class="col-md-6">
                                @(Html.Kendo().TextBox()
                             .Name("txtName1")
                             .HtmlAttributes(new { placeholder = "Enter Name", required = "required", validationmessage = "*", maxlength = "50", @class = "col-sm-2 form-control", style = "width: 100%", })
                                )
