                Address: $('#txtAddress1').val(),
              

            }
            var model = {
                "emp": employeeModel
            }
            $.ajax({
                type: "POST",
                url: '/Home/UpdateEmployee', data: model,
                datatype: "json",
                cache: false,
                success: function (data) {

                },

            });
            btnReset_Click();
            var wnd = $("#EditDetails").data("kendoWindow");
            wnd.center().close();
            alert("Record updated successfully!");
            var grid = $('#grid').data('kendoGrid');
            grid.dataSource.read();
            return true;
        }
        else {
            return false;
        }
    }

</script>